@media only screen and (max-width: 1400px) {
  .zeroarmario-logo {
    width: 150px;
    margin: 25px 10px 40px 30px;
    top: -3vh;
    left: -1.3vw;
  }
  .nav-pills .nav-link {
    font-size: 15px;
    border-left: 5px solid transparent;
    padding: 15px 0px;
    color: #000 !important;
    line-height: 19.49px;
    letter-spacing: 0.2px;
    border-radius: 0;
  }
  .admin-user-span {
    right: -1.3vw;
  }
  .admin-user-span a {
    font-size: 15px;
    padding: 5px 7px;
  }
  .admin-user-span span {
    padding: 0px 0px;
  }
}