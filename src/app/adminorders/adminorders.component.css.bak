.admin-orders {
  background-color: rgba(247, 248, 252, 1);
  padding: 30px 35px 20px 22px;
}
.admin-orders p {
  font-size: 14px;
  margin-bottom: 0;
}
.main-div,
.orders,
.order-details,
.all-orders {
  padding: 20px 2px;
}
.all-orders span {
  border-radius: 20px;
  padding: 3px 10px;
  color: #FFF;
  background-color: rgba(39, 194, 76, 1);
}

.all-orders span.processing {
  background-color: #FFA152;
}

.all-orders span.cancelled {
  background-color: #F12B2C;
}
.box-div {
  display: flex;
  justify-content: space-between;
}
.box-div div {
  border: 1px solid rgba(223, 224, 235, 1);
  background-color: rgba(255, 255, 255, 1);
  width: 258px;
  height: 120px;
}
.box-div div p {
  position: relative;
  top: 30px;
}
.box-div div :nth-child(1) {
  color: rgba(159, 162, 180, 1);
}
.box-div div :nth-child(2) {
  font-size: 16px;
  font-weight: bold;
}
#cancel-btn {
  width: 100%;
    height: 100%;
    color: #8F8F8F;
    background-color: rgba(237,237,237,1);
    cursor: default;
}
.icon-controls button {
  background-color: rgba(237, 237, 237, 1);
  width: 40px;
}
.order-details {
  border: 1px solid rgba(223, 224, 235, 1);
  background-color: rgba(255, 255, 255, 1);
  padding: 15px;
  margin: 25px 0;
}
.table thead th {
  text-transform: uppercase;
}
input[type="checkbox"] {
  height: 20px;
  width: 20px;
  border: 1px solid #000;
}
.has-search .form-control {
  padding-left: 2.375rem;
}
.has-search .form-control-feedback {
  position: absolute;
  z-index: 2;
  display: block;
  width: 1rem;
  height: 1rem;
  /* line-height: 0.375rem; */
  text-align: center;
  pointer-events: none;
  color: #aaa;
  margin: 11px;
}
input {
  border: none !important;
}
.icon-controls button {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 30px;
}
textarea:focus,
textarea.form-control:focus,
input.form-control:focus,
input[type="text"]:focus,
input[type="password"]:focus,
input[type="email"]:focus,
input[type="number"]:focus,
[type="text"].form-control:focus,
[type="password"].form-control:focus,
[type="email"].form-control:focus,
[type="tel"].form-control:focus,
[contenteditable].form-control:focus {
  box-shadow: inset 0 0px 0 #ddd;
}
button {
  outline: none;
  border: none;
}
.borderless th,
.borderless td {
  border: none !important;
  border-bottom: 1px solid #ebedf0 !important;
}

body {
  background: #fff;
}
section {
  overflow-x: hidden;
}
.zeroarmario-logo {
  width: 180px;
  margin: 35px 30px 40px 50px;
  position: relative;
  top: -4vh;
  left: -0.95vw;
}
