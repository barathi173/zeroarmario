.admin-home-dropdown .dropdown-item {
  font-size: 16px;
  /* margin-left:15px; */
  /* padding-left: 42px !important; */
}
.admin-home-dropdown .dropdown-toggle {
  width: 100% !important;
  font-size: 17px;
  border: none;
  background-color: #fff;
  border-radius: 0;
}
.admin-home-dropdown .dropdown-menu h5 {
  font-size: 16px;
  font-weight: bolder;
}
.admin-home-dropdown .dropdown-toggle::after {
  display: none !important;
  width: 0;
  height: 0;
