}

.delete-btn-container button {
  padding: 9px 3.5vw;
  color: #FFF;
  background-color: #DF0024;
}

.background-change {
  background-color: #000 !important;
  color: #FFF !important;
  cursor: pointer !important;
}

#v-pills-tab {
  position: fixed;
  z-index: 999;
  width: 100%;
  left: 0;
  top: 0;
}

.admin-user-span {
  position: fixed;
  z-index: 998;
  top: 0;
  right: -0.95vw;
}

